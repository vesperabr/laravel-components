{
    "name": "vesperabr/laravel-components",
    "description": "A set of useful Laravel components",
    "keywords": [
        "vespera",
        "laravel",
        "components",
        "blade"
    ],
    "type": "library",
    "license": "MIT",
    "homepage": "https://github.com/vesperabr/laravel-components",
    "authors": [
        {
            "name": "Ricardo Monteiro",
            "email": "ricardo.monteiro@vespera.com.br"
        }
    ],
    "require": {
        "php": "^7.3|^8.0",
        "illuminate/support": "^7.0|^8.0",
        "vesperabr/laravel-data-binder": "^1.0"
    },
    "require-dev": {
        "orchestra/testbench": "^6.20",
        "phpunit/phpunit": "^9.4.4"
    },
    "autoload": {
        "psr-4": {
            "Vespera\\LaravelComponents\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Vespera\\LaravelComponents\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Vespera\\LaravelComponents\\Support\\ServiceProvider"
            ]
        }
    }
}
